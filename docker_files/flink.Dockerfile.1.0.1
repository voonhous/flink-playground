FROM flink:1.18.1-scala_2.12-java8

# Install Hudi connector dependencies (https://www.decodable.co/blog/catalogs-in-flink-sql-hands-on)
RUN mkdir -p /opt/flink/lib
RUN wget -P /opt/flink/lib https://repo1.maven.org/maven2/org/apache/hudi/hudi-flink1.18-bundle/1.0.1/hudi-flink1.18-bundle-1.0.1.jar && \
	wget -P /opt/flink/lib https://repo1.maven.org/maven2/com/fasterxml/woodstox/woodstox-core/5.3.0/woodstox-core-5.3.0.jar && \
	wget -P /opt/flink/lib https://repo1.maven.org/maven2/commons-logging/commons-logging/1.1.3/commons-logging-1.1.3.jar  && \
	wget -P /opt/flink/lib https://repo1.maven.org/maven2/org/apache/commons/commons-configuration2/2.1.1/commons-configuration2-2.1.1.jar && \
	wget -P /opt/flink/lib https://repo1.maven.org/maven2/org/apache/hadoop/hadoop-auth/3.3.2/hadoop-auth-3.3.2.jar && \
	wget -P /opt/flink/lib https://repo1.maven.org/maven2/org/apache/hadoop/hadoop-hdfs-client/3.3.2/hadoop-hdfs-client-3.3.2.jar && \
	wget -P /opt/flink/lib https://repo1.maven.org/maven2/org/apache/hadoop/hadoop-common/3.3.2/hadoop-common-3.3.2.jar && \
	wget -P /opt/flink/lib https://repo1.maven.org/maven2/org/apache/hadoop/hadoop-mapreduce-client-core/3.3.2/hadoop-mapreduce-client-core-3.3.2.jar && \
	wget -P /opt/flink/lib https://repo1.maven.org/maven2/org/apache/hadoop/thirdparty/hadoop-shaded-guava/1.1.1/hadoop-shaded-guava-1.1.1.jar && \
	wget -P /opt/flink/lib https://repo1.maven.org/maven2/org/codehaus/woodstox/stax2-api/4.2.1/stax2-api-4.2.1.jar
